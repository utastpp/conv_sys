    private void newDomainButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_newDomainButtonActionPerformed
        if(!DomainEditorFrame.isOpened()){
            DomainEditorFrame.execute("Add");
            this.dispose();
        } else {
            showMessageDialog(null, "Domain Editor is already opened");
        }
    }//GEN-LAST:event_newDomainButtonActionPerformed

    private void openDomainButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_openDomainButtonActionPerformed
        if(!DomainEditorFrame.isOpened()){
            FileNameExtensionFilter filter = new FileNameExtensionFilter("sqlite db", new String[] {"db"});
            fileChooser.setCurrentDirectory(new File(System.getProperty("user.dir") + "/domain/"));
            fileChooser.addChoosableFileFilter(filter);
            fileChooser.setFileFilter(filter);
            int returnVal = fileChooser.showOpenDialog(this);
            if(returnVal == JFileChooser.APPROVE_OPTION) {
                File selectedFile = fileChooser.getSelectedFile();
                File dest =new File(System.getProperty("user.dir") + "/domain/" + selectedFile.getName()) {};
                try {
                    Files.copy(selectedFile.toPath(), dest.toPath(),REPLACE_EXISTING);
                    // need to configure this
                    String domainName = selectedFile.getName().substring(0, selectedFile.getName().length()-3);
                    DomainLoader.openDomainFile(domainName, true);
                    
                    MainFrame.execute(false, domainName,Main.domain.getReasonerType());
                    this.dispose();
                } catch (IOException ex) {
                    Logger.getLogger(StartupFrame.class.getName()).log(Level.SEVERE, null, ex);
                } catch (Exception ex) {
                    Logger.getLogger(StartupFrame.class.getName()).log(Level.SEVERE, null, ex);
                }
                
            }
        } else {
            showMessageDialog(null, "Domain Editor is already opened");            
        }
    }//GEN-LAST:event_openDomainButtonActionPerformed

